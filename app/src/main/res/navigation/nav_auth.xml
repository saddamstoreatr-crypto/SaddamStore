<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_auth"
    app:startDestination="@id/startFragment">

    <fragment android:id="@+id/startFragment" android:name="com.sdstore.auth.StartFragment">
        <action android:id="@+id/action_startFragment_to_enterPhoneFragment"
            app:destination="@id/enterPhoneFragment" />
    </fragment>
    <fragment android:id="@+id/enterPhoneFragment" android:name="com.sdstore.auth.EnterPhoneFragment">
        <action android:id="@+id/action_enterPhoneFragment_to_enterOtpFragment"
            app:destination="@id/enterOtpFragment" />
    </fragment>
    <fragment android:id="@+id/enterOtpFragment" android:name="com.sdstore.auth.EnterOtpFragment">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="verificationId"
            app:argType="string" />
    </fragment>
</navigation>