<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.SaddamStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/brand_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- App Theme -->
    <style name="Theme.SaddamStore" parent="Base.Theme.SaddamStore" />

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brand_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_store_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.SaddamStore</item>
    </style>

    <!-- Toolbar Style -->
    <style name="GreenToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/brand_green</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- EditText Style -->
    <style name="EditText.English" parent="Widget.AppCompat.EditText">
        <item name="android:textDirection">ltr</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

</resources>
